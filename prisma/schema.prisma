// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model product {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String          @unique
  description String
  stripeId    String
  price       Int
  features    String[]
  notes       String?
  dimensions  String
  images      productImages[]
}

model productImages {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl       String
  productId      String
  sequenceNumber Int
  product        product @relation(fields: [productId], references: [id])
}
